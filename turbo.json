{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["DATABASE_URL", "DIRECT_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/**/.next/**", "apps/**/dist/**", "packages/**/dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
