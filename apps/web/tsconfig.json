{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@features/*": ["./features/*"],
      "@components/*": ["./components/*"],
      /* âœ… Unified internal aliases pointing to package sources */
      "@invictus/ui": ["../../packages/ui/src"],
      "@invictus/db": ["../../packages/db"],
      "@invictus/zod-schemas": ["../../packages/zod-schemas"],
      "@invictus/types": ["../../packages/types/src"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true /* ðŸ’¡ Tip: Switch to true when team is ready for enterprise-grade safety */,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
